<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
	<meta name="description" content=""/>
	<meta name="author" content=""/>

    <link href="@Url.Content("~/Styles/base.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Styles/skeleton.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Styles/layout.css")" rel="stylesheet" type="text/css" />

	<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->

	<link rel="shortcut icon" href="@Url.Content("~/Images/favicon.ico")"/>
	<link rel="apple-touch-icon" href="@Url.Content("~/Images/apple-touch-icon.png")"/>
	<link rel="apple-touch-icon" sizes="72x72" href="@Url.Content("~/Images/apple-touch-icon-72x72.png")"/>
	<link rel="apple-touch-icon" sizes="114x114" href="@Url.Content("~/Images/apple-touch-icon-114x114.png")"/>

    @RenderSection("JavaScriptHeader", false)

    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="wrap">
    <div class="main">
    <div class="container">
        <div class="fourteen columns">&nbsp;</div>
        <div class="two columns">@Html.Partial("_LogOnPartial")</div>
        <div class="two columns">
            <span style="color: #808080;font-family:'Satisfy','Handlee','Georgia','Times New Roman',serif;font-weight: normal;">
                <span style="font-size: 46px;position:relative;left:+7px;top:0px;">S</span>
                <span style="font-size: 34px;position:relative;left:+0px;top:10px;">&amp;</span>
                <span style="font-size: 46px;position:relative;left:-5px;top:20px;">H</span>
            </span>
        </div>
        <div class="twelve columns" style="text-align: center">
            <!--<h1>Simon & Helen's Wedding</h1>-->
            <h1>Insert title here</h1>
        </div>
        <div class="two column">&nbsp;</div>
        <div class="nine columns">&nbsp;</div>
        <div class="seven columns"><h3>15<span style="vertical-align: super;font-size: .83em">th</span> June 2013</h3></div>
        <div class="nav sixteen columns">
            <ul>
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Venue", "Venue", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
        </div>
    </div>

    @RenderBody()
    </div>
    </div>
    <footer>
        <div class = "container">
            <div class="six columns">
                <h5>RSS</h5>
                @Html.ActionLink("Atom", "Atom", "Syndication")
                @Html.ActionLink("RSS", "RSS", "Syndication")
            </div>
            <div class="four columns">
                @Html.ActionLink("About this website", "Index", "About");
            </div>
            <div class="six columns">
                Copyright © 2012 <a href="mailto:simonandhelen@needham.uk.net">Simon Needham. All Rights Reserved.</a>
                <a href="mailto:enquiries@beaonsfieldsoftware.com">Beaconsfield Software Ltd</a>
            </div>
        </div>
    </footer>

    <script src="http://code.jquery.com/jquery-1.7.2.min.js" type="text/javascript"></script>
</body>
</html>
