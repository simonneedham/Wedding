@model Wedding.Models.Post

@{
    ViewBag.Title = "S&H Wedding :: News :: Delete";
}


<div class="container">
    <h3>Are you sure you want to delete this?</h3>
    @using (Html.BeginForm()) {
        if (User.IsInRole("blogger"))
        {
            <p><input type="submit" value="Delete" /></p>
        }   
    }
    <fieldset>
        <legend></legend>
        <h4>@Html.DisplayFor(model => model.Title)</h4>
        <div class="display-field">
            @Html.Raw(HttpUtility.HtmlDecode(Model.PostContent))
        </div>
        <div>
            @Html.DisplayFor(model => model.UserName)&nbsp;&nbsp;@Html.DisplayFor(model => model.Updated)
        </div>
    </fieldset>
    <p>@Html.ActionLink("Back to List", "Index")</p>
</div>